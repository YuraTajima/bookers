<h1>Books</h1>
<table>
  <thead>
    <tr>
      <ht>Title</ht>
      <ht>body</ht>
      <ht colspan="3"></ht>
    </tr>
  </thead>

<tobody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, method: :delete, "deta-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
</tobody>
 
  
</table>


<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |massage| %>
    <li><%= massage %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <br>
  <%= f.submit 'Create Book' %>
<% end %>